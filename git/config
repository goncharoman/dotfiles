[include]
  path = user # user config

[core]
  editor = nvim
  pager = less -+FX -S

[alias]
  graph = log --graph --abbrev-commit --decorate=short --pretty='%C(red)%h%C(reset) --%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --all
  unstage = reset HEAD --
  stat = !git --no-pager diff --stat
  tui = lg
  lg = !lazygit
  history = !git forgit log
  ignore = forgit ignore
  cd = forgit show
  ss = forgit stash_show
  cf = forgit checkout_file
  ri = forgit rebase
  cp = forgit cherry_pick

[init]
  defaultBranch = main

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
